<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgilogo"
        android:layout_width="156dp"
        android:layout_height="138dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />

    <TextView
        android:id="@+id/txtiten"
        android:layout_width="112dp"
        android:layout_height="28dp"
        android:text="TextView"
        android:textColor="#050000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.169"
        app:layout_constraintStart_toEndOf="@+id/imgilogo"
        app:layout_constraintTop_toTopOf="@+id/imgilogo" />

    <TextView
        android:id="@+id/txtituoi"
        android:layout_width="113dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textColor="#0E0000"
        app:layout_constraintEnd_toEndOf="@+id/txtiten"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtiten"
        app:layout_constraintTop_toBottomOf="@+id/txtiten" />

    <TextView
        android:id="@+id/txtiphai"
        android:layout_width="113dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#0B0000"
        app:layout_constraintEnd_toEndOf="@+id/txtituoi"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtituoi"
        app:layout_constraintTop_toBottomOf="@+id/txtituoi" />

</androidx.constraintlayout.widget.ConstraintLayout>