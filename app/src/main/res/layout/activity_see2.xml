<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".See2">

    <EditText
        android:id="@+id/txtten2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="140dp"
        android:ems="10"
        android:hint="Tên"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogo2" />

    <EditText
        android:id="@+id/txttuoi2"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="144dp"
        android:ems="10"
        android:hint="Tuổi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtten2" />

    <RadioGroup
        android:id="@+id/radgroup2"
        android:layout_width="234dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/txttuoi2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txttuoi2"
        app:layout_constraintTop_toBottomOf="@+id/txttuoi2">

        <RadioButton
            android:id="@+id/radnam2"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/radnu2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Nu" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imglogo2"
        android:layout_width="270dp"
        android:layout_height="213dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />

    <Button
        android:id="@+id/btnthem2"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:layout_marginTop="64dp"
        android:text="thêm"
        app:layout_constraintEnd_toStartOf="@+id/btnsua2"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radgroup2" />

    <Button
        android:id="@+id/btnsua2"
        android:layout_width="126dp"
        android:layout_height="54dp"
        android:layout_marginEnd="52dp"
        android:text="Sua"

        app:layout_constraintBottom_toBottomOf="@+id/btnthem2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnthem2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>